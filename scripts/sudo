<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Helix Lite Alpha â€“ Container Health</title>
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.4.0/dist/tailwind.min.css" rel="stylesheet">
<script>
async function loadStatus() {
  const res = await fetch('containers.json');
  const data = await res.json();
  const tbody = document.querySelector('#status-body');
  tbody.innerHTML = '';
  data.forEach(c => {
    const healthy = c.Status.includes('healthy');
    const row = `
      <tr class="border-b">
        <td class="px-4 py-2 font-mono">${c.Names}</td>
        <td class="px-4 py-2 ${healthy ? 'text-green-600' : 'text-red-600'}">${c.Status}</td>
        <td class="px-4 py-2">${c.Ports}</td>
      </tr>`;
    tbody.insertAdjacentHTML('beforeend', row);
  });
}
setInterval(loadStatus, 5000);
window.onload = loadStatus;
</script>
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="container mx-auto my-10 p-6 bg-white shadow-xl rounded-xl">
    <h1 class="text-3xl font-bold mb-4">Helix-Lite-Alpha Container Health</h1>
    <table class="min-w-full text-left border-collapse">
      <thead>
        <tr class="border-b bg-gray-200">
          <th class="px-4 py-2">Name</th>
          <th class="px-4 py-2">Status</th>
          <th class="px-4 py-2">Ports</th>
        </tr>
      </thead>
      <tbody id="status-body"></tbody>
    </table>
  </div>
</body>
</html>
